@page
@using DeliverySoftware.Business.Users;
@model DeliverySoftware.Pages.User.CreateEditUserModel
@{
}

<form method="post" novalidate>
    <div>
        <label asp-for="@Model.ModifiedUser.Forename">Forename</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.ModifiedUser.Forename">
        </div>
        <span class="text-danger" asp-validation-for="@Model.ModifiedUser.Forename"></span>
    </div>
    <div>
        <label asp-for="@Model.ModifiedUser.Surname">Surname</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.ModifiedUser.Surname">
        </div>
        <span class="text-danger" asp-validation-for="@Model.ModifiedUser.Surname"></span>
    </div>
    @if(Model.UserTypeToCreateOrEdit != UserType.Customer)
    {
        <div>
            <label asp-for="@Model.ModifiedUser.UserName">Username</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.ModifiedUser.UserName">
            </div>
            <span class="text-danger" asp-validation-for="@Model.ModifiedUser.UserName"></span>
        </div>
    }
    <div>
        <label asp-for="@Model.ModifiedUser.Email">Email</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.ModifiedUser.Email">
        </div>
        <span class="text-danger" asp-validation-for="@Model.ModifiedUser.Email"></span>
    </div>

    @if(Model.UserTypeToCreateOrEdit == UserType.Customer) {
        <div>
            <label asp-for="@Model.ModifiedUser.HouseNumber">House Number</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.ModifiedUser.HouseNumber">
            </div>
            <span class="text-danger" asp-validation-for="@Model.ModifiedUser.HouseNumber"></span>
        </div>
        <div>
            <label asp-for="@Model.ModifiedUser.Address">Address</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.ModifiedUser.Address">
            </div>
            <span class="text-danger" asp-validation-for="@Model.ModifiedUser.Address"></span>
        </div>
        <div>
            <label asp-for="@Model.ModifiedUser.PostCode">Post Code</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.ModifiedUser.PostCode">
            </div>
            <span class="text-danger" asp-validation-for="@Model.ModifiedUser.PostCode"></span>
        </div>
    }

    @if (Model.UserTypeToCreateOrEdit != UserType.Customer)
    {
        <input type="hidden" asp-for="@Model.ModifiedUser.UserName" />
    }

    <input type="hidden" asp-for="@Model.ModifiedUser.Id" />
    <input type="hidden" asp-for="@Model.ModifiedUser.UserType" />
    <input type="hidden" asp-for="@Model.UserTypeToCreateOrEdit" />

    @if (Model.UID != Guid.Empty)
    {
        <input type="submit" value="Update User">
    }
    else
    {
        <input type="submit" value="Create User">
    }
</form>