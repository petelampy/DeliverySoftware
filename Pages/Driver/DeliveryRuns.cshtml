@page
@using DeliverySoftware.Business.Delivery;
@model DeliverySoftware.Pages.Driver.DeliveryRunsModel
@{
}


<div class="container-sm m-auto bg-card rounded-3 border p-5 shadow-lg">
    <h1 class="text-center display-4 mb-3">Available Delivery Runs</h1>
    <div class="row justify-content-center">
        @if (Model.DeliveryRuns.Count < 1)
        {
                <h2 class="text-center display-6">No delivery runs available</h2>
        }
        else
        {
                <table class="mb-3">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Number Of Packages
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (Business.Delivery.Delivery DeliveryRun in Model.DeliveryRuns)
                    {
                        <tr>
                            <td>@DeliveryRun.Id</td>
                            <td>@DeliveryRun.NumberOfPackages</td>
                            <td>@DeliveryRun.Status</td>
                            <td>
                                @if(DeliveryRun.Status == DeliveryStatus.Started)
                                {
                                    <a class="btn btn-primary" role="button" asp-page="CurrentDelivery" asp-route-DeliveryRunUID="@DeliveryRun.UID">Continue Delivery Run</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary" role="button" asp-page="CurrentDelivery" asp-route-DeliveryRunUID="@DeliveryRun.UID">Start Delivery Run</a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
        }
    </div>
</div>